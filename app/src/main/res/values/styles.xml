<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Name field margins-->
    <style name="name_field_margins">
        <item name="android:layout_marginLeft">@dimen/layout_margin1</item>
        <item name="android:layout_marginRight">@dimen/layout_margin1</item>
        <item name="android:gravity">bottom</item>
    </style>

    <!-- TextView margins-->
    <style name="TextView_margins">
        <item name="android:layout_marginLeft">@dimen/layout_margin1</item>
        <item name="android:layout_marginRight">@dimen/layout_margin1</item>
        <item name="android:layout_marginTop">@dimen/padding1</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

</resources>
